{
    "compilerOptions": {
      "outDir": "./lib",
      "declarationDir": "./types",
      "target": "es5",
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "declaration": true,
      "skipLibCheck": true,
      "noImplicitAny": false,
      "sourceMap": true
    },
    "include": [
      "src",
      "./rollup.config.js"
    ],
    "exclude": [
      "node_modules"
    ]
}